<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xamarin.EX05FIAP.View.ContatosView">

    <Grid Padding="5" RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button x:Name="btnPhone" Text="Ligar"  Grid.Row="0" Clicked="OnCall"/>
        <Button x:Name="btnFoto" Text="Trocar Foto"  Grid.Row="1"/>
        <Button x:Name="btnCoodenadas" Text="Capturar Coordenada"  Grid.Row="2"/>


        <ListView x:Name="lstContatos" Grid.Row="3" ItemTapped="OnItemTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10,10,0,0" HeightRequest="30" >
                            <Label Text="{Binding Nome}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentPage>